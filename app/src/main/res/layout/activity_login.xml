<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fundoPadrao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gerenciamento de Locais"
        android:gravity="center"
        android:background="@color/fundoFaixa"
        android:textSize="14pt"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editTextUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        android:layout_marginTop="300dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Login"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:inputType="textPassword"
        android:hint="Senha"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsuario"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textViewNovoCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="novoUsuario"
        android:text="Cadastrar Novo UsuÃ¡rio"
        android:textColor="@color/clicarCor"
        android:textSize="10pt"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/fundoFaixa"
        android:textColor="@color/cinzaLetra"
        android:textSize="10pt"
        android:onClick="login"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextSenha"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>